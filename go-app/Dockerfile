FROM golang:latest

WORKDIR /app

# Копируем все файлы в текущей директории внутрь контейнера
COPY . .

# Получаем зависимости, если используется Go Modules
RUN go get -d -v ./...

# Собираем приложение
RUN go install -v ./...

# Указываем команду, которая будет выполняться при запуске контейнера
CMD ["go", "run", "/app/cmd/app/main.go"]
